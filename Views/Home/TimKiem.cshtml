@model IEnumerable<LeDangQuang_DoAnTotNghiep.Models.Sach>
@{
    ViewBag.Title = "TimKiem";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<div class="fst_div">
    <h2 style="text-align:center">Kết quả tìm kiếm</h2>
    <br />
    @foreach (var item in Model)
    {
        <div class="ds_Sach">
            <div style="height: 250px;">
                @{
                    string ImagePath = "~/wwwroot/Images/" + item.Anh;
                }
                <p style="text-align:center"><a href="@Url.Action("XemChiTietSach","Home",new {id = item.MaSach})"><img src="@Url.Content(ImagePath)" alt="" class="anhmh"></a></p>
                <p class="tensach" style="text-align:center">@item.TenSach</p>
                <br />
                <p class="gia" style="text-align:center">@item.Gia.ToString("#,##") đ</p>
            </div>
            <div style="margin-top: 10px; height: 50px;">
                <a style="margin-left:50px" href="@Url.Action("ThemGioHang","GioHang",new {@MaSach = item.MaSach,@strURL = Request.Url.ToString() })" class="themvaogio"><i class="ti-shopping-cart"></i> Thêm vào giỏ hàng</a>
            </div>
        </div>
    }
</div>