@model IEnumerable<LeDangQuang_DoAnTotNghiep.Models.ChiTietDonHang>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section header{
    <div class="container-fluid px-4">
        <h1 class="mt-4" style="text-align: center;">Nhà sách Việt Lý</h1>
    </div>
}
<div class="row">
    <div class="col-xl-3 col-md-6">
        <div class="card bg-primary text-white mb-4">
            <div class="card-body">Doanh thu</div>
            <div class="card-footer d-flex align-items-center justify-content-between">
                <span><i class="fa-solid fa-sack-dollar"></i></span>
                <span>@ViewBag.Tongtien VNĐ</span>
                <span></span>
                <span></span>
                <span></span>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card bg-warning text-white mb-4" style="background-color: coral !important;">
            <div class="card-body">Số sản phẩm đã bán</div>
            <div class="card-footer d-flex align-items-center justify-content-between">
                <span><i class="fa-solid fa-wallet"></i></span>
                <span>@ViewBag.Tongsp Sản phẩm</span>
                <span></span>
                <span></span>
                <span></span>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card bg-success text-white mb-4">
            <div class="card-body">Số người đăng ký</div>
            <div class="card-footer d-flex align-items-center justify-content-between">
                <span><i class="fa-solid fa-users"></i></span>
                <span>@ViewBag.Tongnguoi khách hàng</span>
                <span></span>
                <span></span>
                <span></span>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card bg-danger text-white mb-4">
            <div class="card-body">Số đơn hàng chờ duyệt</div>
            <div class="card-footer d-flex align-items-center justify-content-between">
                <span><i class="fa-solid fa-file-pen"></i></span>
                <span>@ViewBag.Sodh Đơn</span>
                <span></span>
                <span></span>
                <span></span>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-xl-6" style="width: 100%;">
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-chart-bar me-1"></i>
                Top sản phẩm bán chạy
            </div>
            @Html.Action("ThongKe", "Home")
            </div>
        </div>
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-table me-1"></i>
                    Sản phẩm đã bán
                </div>
                <div class="card-body">
                    <table id="datatablesSimple">
                        <thead>
                            <tr>
                                <th>Tên sách</th>
                                <th>Số lượng</th>
                                <th>Giá bán</th>
                                <th>Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model)
                            { 
                            <tr>
                                <td>@item.Sach.TenSach</td>
                                <td>@item.SoLuong</td>
                                <td>@(Convert.ToInt32(item.GiaBan)) VNĐ</td>
                                <td>@(Convert.ToInt32(item.GiaBan) * item.SoLuong) VNĐ</td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

