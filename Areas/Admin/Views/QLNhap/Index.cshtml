@model IEnumerable<LeDangQuang_DoAnTotNghiep.Models.ChiTietPhieuNhap>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    <div class="container-fluid px-4">
        <h1 class="mt-4" style="text-align: center;">Thông tin sách nhập thêm</h1>
    </div>
}
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Sản nhập thêm
    </div>
    <div class="card-body">
        <table id="datatablesSimple">
            <thead>
                <tr>
                    <th>Ngày nhập</th>
                    <th>Nhà cung cấp</th>
                    <th>Tên sách</th>
                    <th>Số lượng</th>
                    <th>Đơn giá nhập</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.PhieuNhap.NgayNhap</td>
                        <td>@item.PhieuNhap.NhaCC.TenNhaCC</td>
                        <td>@item.Sach.TenSach</td>
                        <td>@item.SoLuong</td>
                        <td>@item.DonGia</td>
                    </tr>
                }
            </tbody>
        </table>
        <p style="float: right"> <a class="addproducts" href="@Url.Action("ExportExcel","QLNhap")">Xuất file Excel</a></p>
       
    </div>
</div>
