@model IEnumerable<LeDangQuang_DoAnTotNghiep.Models.Sach>
@{
    ViewBag.Title = "SachSapHet";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section header{
    <div class="container-fluid px-4">
        <h1 class="mt-4" style="text-align: center;">Danh sách các sản phẩm sắp hết hàng</h1>
    </div>
}
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Thông tin sách
    </div>
    <div class="card-body">
        <table id="datatablesSimple">
            <thead>
                <tr>
                    <th>Tên sách</th>
                    <th>Ảnh</th>
                    <th>Mô tả</th>
                    <th>Số lượng</th>
                    <th>Tác giả</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="150px">
                            @Html.DisplayFor(modelItem => item.TenSach)
                        </td>
                        <td width="150px">
                            @{
                                string ImagePath = "~/wwwroot/Images/" + item.Anh;
                            }
                            <img src="@Url.Content(ImagePath)" width="150" />
                        </td>
                        <td width="400px">@Html.DisplayFor(modelItem => item.MoTa)</td>
                        <td width="150px">@Html.DisplayFor(modelItem => item.SoLuong)</td>
                        <td width="150px">@Html.DisplayFor(modelItem => item.TacGia)</td>
                        <td>
                            <p style="padding: 10px; text-align:center">
                                <a class="addproducts" href="@Url.Action("CapNhatSL","QLNhap",new { id = item.MaSach})"><i class="fas fa-plus"></i> Nhập thêm</a>
                            </p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>