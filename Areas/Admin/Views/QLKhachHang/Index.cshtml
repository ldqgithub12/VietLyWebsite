@model IEnumerable<LeDangQuang_DoAnTotNghiep.Models.KhachHang>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section header{
    <div class="container-fluid px-4">
        <h1 class="mt-4" style="text-align: center;">Quản lý tài khoản khách hàng</h1>
    </div>
}
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Thông tin danh mục
    </div>
    <div class="card-body">
        <table id="datatablesSimple">
            <thead>
                <tr>
                    <th>Tên khách hàng</th>
                    <th>Email</th>
                    <th>Địa chỉ</th>
                    <th>Số điện thoại</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr id="row_@item.MaKH">
                        <td>@item.HoTen</td>
                        <td>@item.Email</td>
                        <td>
                            @item.DiaChi
                        </td>
                        <td>@item.SoDT</td>
                        <td width="150px">
                            <p>
                                <i class="fas fa-trash-alt"></i>
                                @Ajax.ActionLink("Xóa", "XoaTK", new { id = item.MaKH },
                                    new AjaxOptions
                                         {
                                             Confirm = "Bạn có muốn xóa bản ghi này ?",
                                        OnComplete = "$('row_" + item.MaKH + "').remove()",
                                        HttpMethod = "Delete"
                                         })
                            </p>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>
